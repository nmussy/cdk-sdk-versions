{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "composite": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "package.json"],
  "exclude": ["node_modules"]
}
